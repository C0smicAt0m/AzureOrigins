      "type": "origins:damage",
      "amount": 3,
      "damage_type": "generic"
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:health",
          "comparison": ">",
          "compare_to": 3
        },
        {
          "type": "origins:power_active",
